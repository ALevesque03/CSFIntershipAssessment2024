@model Model.Form

@{
    ViewData["Title"] = "Create";
}

<h1>Please answer the following survey.</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input asp-for="FormId" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">What is the name of your favorite animal? (Species)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owned" class="control-label">How many of this animal have you previously owned, if any?</label>
                <input asp-for="Owned" class="form-control" />
                <span asp-validation-for="Owned" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="GoodPet" class="form-check-input" type="checkbox" />
                <label asp-for="GoodPet" class="form-check-label">Would you consider this animal as a good pet to have?</label>
                <span asp-validation-for="GoodPet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}